<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comviva.mdesapp.activities.ConfigurationActivity">

    <EditText
        android:id="@+id/etPayAppServerIp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Payment App Server IP" />

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etPayAppServerIp" />

    <EditText
        android:id="@+id/etPayAppServerPort"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space1"
        android:hint="Payment App Server Port" />

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etPayAppServerPort" />

    <EditText
        android:id="@+id/etCmsDIp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space2"
        android:hint="Cms-D IP" />

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etCmsDIp" />

    <EditText
        android:id="@+id/etCmsDPort"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space3"
        android:hint="Cms-D Port" />

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etCmsDPort" />

    <Button
        android:id="@+id/btnUpdateConfig"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Update"
        android:layout_below="@+id/space4" />

</RelativeLayout>
