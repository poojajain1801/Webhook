<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.comviva.mdesapp.activities.RegisterActivity">

    <EditText
        android:id="@+id/editUserId"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="User Id"/>

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editUserId"/>

    <EditText
        android:id="@+id/editActivationCode"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space1"
        android:hint="Activation Code"/>

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editActivationCode"/>

    <EditText
        android:id="@+id/editMobilePin"
        android:text="1234"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space3"
        android:hint="Mobile Pin"/>

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editMobilePin"/>

    <EditText
        android:id="@+id/editDeviceName"
        android:text="PersonalDevice"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space4"
        android:hint="Device Name"/>

    <Space
        android:id="@+id/space5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editDeviceName"/>

    <Button
        android:id="@+id/btnReg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Register"
        android:layout_below="@+id/space5"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
