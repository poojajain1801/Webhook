<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.comviva.mdesapp.activities.AddCardActivity">

    <!-- MasterCard-5500000000000004 Visa-4622943127007327 -->
    <EditText
        android:id="@+id/editPan"
        android:text="4622943127007327"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Card Number"/>

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editPan"/>

    <!-- MasterCard-688 Visa-633 -->
    <EditText
        android:id="@+id/editCvc"
        android:text="633"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/space1"
        android:hint="CVC"/>

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editCvc"/>

    <!-- MasterCard-07 Visa-12 -->
    <EditText
        android:id="@+id/editExpMonth"
        android:text="12"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Expiry Month"
        android:layout_below="@+id/space2"/>

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editExpMonth"/>

    <!-- MasterCard-2020 Visa-2017 -->
    <EditText
        android:id="@+id/editExpYear"
        android:text="2017"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Expiry Year"
        android:layout_below="@+id/space3"/>

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editExpYear"/>

    <EditText
        android:id="@+id/editCardHolderName"
        android:text="Tarkeshwar Prasad Vishvakarma"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Card Holder Name "
        android:layout_below="@+id/space4"/>

    <Space
        android:id="@+id/space5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editCardHolderName"/>

    <Button
        android:id="@+id/btnDigCard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Digitize card"
        android:layout_below="@+id/space5"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
